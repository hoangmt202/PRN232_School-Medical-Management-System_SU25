@page
@model SchoolMedicalManagement.Pages.Admin.Inventory.DetailModel
@{
    ViewData["Title"] = "Drug Details";
}

<section class="container py-4">
    <h2 class="mb-4">💊 Drug Detail</h2>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Medication Name</dt>
            <dd class="col-sm-9">@Model.Drug.MedicationName</dd>

            <dt class="col-sm-3">Dosage Form</dt>
            <dd class="col-sm-9">@Model.Drug.DosageForm</dd>

            <dt class="col-sm-3">Strength</dt>
            <dd class="col-sm-9">@Model.Drug.Strength</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Drug.Quantity</dd>

            <dt class="col-sm-3">Expiration Date</dt>
            <dd class="col-sm-9">@Model.Drug.ExpirationDate.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Manufacturer</dt>
            <dd class="col-sm-9">@Model.Drug.Manufacturer</dd>

            <dt class="col-sm-3">Storage Location</dt>
            <dd class="col-sm-9">@Model.Drug.StorageLocation</dd>

            <dt class="col-sm-3">Date Received</dt>
            <dd class="col-sm-9">@Model.Drug.DateReceived.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Managed By</dt>
            <dd class="col-sm-9">@Model.Drug.ManagedByName</dd>
        </dl>
        <a href="/Admin/Inventory" class="btn btn-secondary mt-3">⬅ Back to Inventory</a>
    </div>
</section>
