@page "{id:int}"
@model SchoolMedicalManagement.Pages.SchoolNurses.DeleteModel
@{
    ViewData["Title"] = "Delete School Nurse";
}
<h1>Delete School Nurse</h1>
<h3>Are you sure you want to delete this school nurse?</h3>
<div>
    <h4>School Nurse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.SchoolNurse.FullName</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.SchoolNurse.PhoneNumber</dd>
        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.SchoolNurse.UserId</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="SchoolNurse.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div> 