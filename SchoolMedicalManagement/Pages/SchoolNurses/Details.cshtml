@page "{id:int}"
@model SchoolMedicalManagement.Pages.SchoolNurses.DetailsModel
@{
    ViewData["Title"] = "School Nurse Details";
}
<h1>School Nurse Details</h1>
<div>
    <h4>School Nurse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.SchoolNurse.FullName</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.SchoolNurse.PhoneNumber</dd>
        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.SchoolNurse.UserId</dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.SchoolNurse.Id">Edit</a> |
