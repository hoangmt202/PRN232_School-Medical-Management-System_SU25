@page "{id:int}"
@model SchoolMedicalManagement.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}
<h1>Delete Student</h1>
<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.Student.FullName</dd>
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.Student.DateOfBirth.ToShortDateString()</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Student.Gender</dd>
        <dt class="col-sm-2">Class</dt>
        <dd class="col-sm-10">@Model.Student.Class</dd>
        <dt class="col-sm-2">Parent Id</dt>
        <dd class="col-sm-10">@Model.Student.ParentId</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Student.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div> 