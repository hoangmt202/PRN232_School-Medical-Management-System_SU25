@page
@model SchoolMedicalManagement.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}
<h1>Students</h1>
<p>
    <a class="btn btn-primary" asp-page="Create">Create New Student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Class</th>
            <th>Parent Id</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model.Students)
    {
        <tr>
            <td>@student.FullName</td>
            <td>@student.DateOfBirth.ToShortDateString()</td>
            <td>@student.Gender</td>
            <td>@student.Class</td>
            <td>@student.ParentId</td>
            <td>
                <a asp-page="Details" asp-route-id="@student.Id">Details</a> |
                <a asp-page="Edit" asp-route-id="@student.Id">Edit</a> |
                <a asp-page="Delete" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table> 