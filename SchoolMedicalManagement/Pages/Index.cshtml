@page
@model IndexModel
@{
    ViewData["Title"] = "School Medical Management System";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-heartbeat me-3"></i>
                    School Medical Management
                </h1>
                <p class="lead mb-4">
                    Comprehensive healthcare management system for educational institutions. 
                    Monitor student health, manage medical records, and ensure the well-being of our community.
                </p>
                <div class="d-flex gap-3">
                    <a href="#features" class="btn btn-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                    <a href="/Auth/Login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="~/image/NorthenBlossoms_OlenCo.png" alt="Healthcare" class="img-fluid rounded" style="max-height: 300px;">
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-primary mb-3">
                        <i class="fas fa-user-graduate fa-3x"></i>
                    </div>
                    <h3 class="card-title text-primary">1,250+</h3>
                    <p class="card-text">Students Enrolled</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-success mb-3">
                        <i class="fas fa-user-md fa-3x"></i>
                    </div>
                    <h3 class="card-title text-success">15</h3>
                    <p class="card-text">Medical Staff</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-warning mb-3">
                        <i class="fas fa-calendar-check fa-3x"></i>
                    </div>
                    <h3 class="card-title text-warning">500+</h3>
                    <p class="card-text">Health Checks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-info mb-3">
                        <i class="fas fa-shield-alt fa-3x"></i>
                    </div>
                    <h3 class="card-title text-info">99.8%</h3>
                    <p class="card-text">Safety Rate</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5" id="features">
    <h2 class="text-center mb-5">
        <i class="fas fa-star text-warning me-2"></i>
        Our Features
    </h2>
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-notes-medical fa-3x"></i>
                    </div>
                    <h4 class="card-title">Medical Records</h4>
                    <p class="card-text">
                        Comprehensive digital medical records for all students with secure access and easy retrieval.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-success mb-3">
                        <i class="fas fa-syringe fa-3x"></i>
                    </div>
                    <h4 class="card-title">Vaccination Tracking</h4>
                    <p class="card-text">
                        Monitor vaccination schedules and ensure all students are up-to-date with their immunizations.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-warning mb-3">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <h4 class="card-title">Incident Reports</h4>
                    <p class="card-text">
                        Quick and efficient incident reporting system for medical emergencies and health concerns.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<div class="container mb-5">
    <h2 class="text-center mb-5">
        <i class="fas fa-bolt text-warning me-2"></i>
        Quick Actions
    </h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <a href="/Parents" class="btn btn-outline-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                        <i class="fas fa-users fa-2x mb-3"></i>
                        <span>Manage Parents</span>
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="#" class="btn btn-outline-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                        <i class="fas fa-user-graduate fa-2x mb-3"></i>
                        <span>Student Records</span>
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="#" class="btn btn-outline-warning btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                        <i class="fas fa-calendar-alt fa-2x mb-3"></i>
                        <span>Health Checks</span>
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="#" class="btn btn-outline-info btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                        <i class="fas fa-chart-line fa-2x mb-3"></i>
                        <span>Reports</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h3 class="mb-4">
                    <i class="fas fa-phone text-primary me-2"></i>
                    Need Help?
                </h3>
                <p class="lead mb-4">
                    Our medical staff is available to assist you with any health-related questions or concerns.
                </p>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-phone text-primary me-2"></i>
                            <span>Emergency: (555) 123-4567</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-envelope text-primary me-2"></i>
                            <span>health@school.edu</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-clock text-primary me-2"></i>
                            <span>Mon-Fri: 8AM-4PM</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
