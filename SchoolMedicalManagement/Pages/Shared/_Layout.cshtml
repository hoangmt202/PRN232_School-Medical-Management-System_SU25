<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School Medical Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolMedicalManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    <i class="fas fa-heartbeat me-2"></i>
                    School Medical Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>

                        @* Show Management and Reports only for Admin or Manager *@
                        @if (Context.Session.GetString("UserRole") != "SchoolNurse" && Context.Session.GetString("UserRole") != "Parent")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-users me-1"></i>Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-page="/Parents/Index"><i class="fas fa-user-friends me-2"></i>Parents</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user-graduate me-2"></i>Students</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user-md me-2"></i>Medical Staff</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Administration</a></li>
                                </ul>
                            </li>
                        }

                        @* Health Records Section (conditional) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="healthDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-notes-medical me-1"></i>Health Records
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="healthDropdown">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-file-medical me-2"></i>Medical Records
                                    </a>
                                </li>

                                @if (Context.Session.GetString("UserRole") == "Parent")
                                {
                                    <li><a class="dropdown-item" asp-page="/Parents/Vaccination/Consent"><i class="fas fa-syringe me-2"></i>Vaccination Consent</a></li>
                                    <li><a class="dropdown-item" asp-page="/Parents/Vaccination/History"><i class="fas fa-history me-2"></i>Vaccination History</a></li>
                                    <li><a class="dropdown-item" asp-page="/Parents/Vaccination/AddExternal"><i class="fas fa-plus-circle me-2"></i>Add External Vaccination</a></li>
                                }
                                else if (Context.Session.GetString("UserRole") == "SchoolNurse")
                                {
                                    <li><a class="dropdown-item" asp-page="/Nurses/VaccinationPlans/Index"><i class="fas fa-clipboard-list me-2"></i>Vaccination Plans</a></li>
                                    <li><a class="dropdown-item" asp-page="/Nurses/VaccinationPlans/VaccinationCalendar"><i class="fas fa-calendar-alt me-2"></i>Vaccination Calendar</a></li>
                                }

                                <li><a class="dropdown-item" href="#"><i class="fas fa-calendar-check me-2"></i>Health Checks</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-exclamation-triangle me-2"></i>Incident Reports</a></li>
                            </ul>
                        </li>

                        @* Drug Storage visible only to SchoolNurse and Manager *@
                        @if (Context.Session.GetString("UserRole") == "SchoolNurse" || Context.Session.GetString("UserRole") == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/Inventory/Index">
                                    <i class="fas fa-pills me-1"></i>Drug Inventory
                                </a>
                            </li>
                        }

                        @* Reports only for Admin or Manager *@
                        @if (Context.Session.GetString("UserRole") != "SchoolNurse" && Context.Session.GetString("UserRole") != "Parent")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-chart-bar me-1"></i>Reports
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="reportsDropdown">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-chart-line me-2"></i>Health Statistics</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-chart-pie me-2"></i>Analytics</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-alt me-2"></i>Monthly Reports</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="/Auth/Profile">
                                    <i class="fas fa-user me-2"></i>Profile
                                </a></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="fas fa-cog me-2"></i>Settings
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Auth/Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </a></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

