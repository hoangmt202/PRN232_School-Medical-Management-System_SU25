@page "/medical-records/edit/{id:int}"
@model SchoolMedicalManagement.Pages.MedicalRecords.EditModel
@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <!-- Header Section -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-gradient-primary text-white border-0 py-4">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-2 text-white">
                                <i class="fas fa-user-md me-3"></i>Edit Medical Record
                            </h4>
                            <p class="mb-0 text-white-50">
                                Update medical information for <strong>@Model.MedicalRecord.StudentName</strong>
                            </p>
                        </div>
                        <div class="col-auto">
                            <a href="/parent/medical-record" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-arrow-left me-2"></i>Back to Records
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>
                            <strong>Error:</strong> @Model.ErrorMessage
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-2"></i>
                        <div>
                            <strong>Success:</strong> @Model.SuccessMessage
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Main Form -->
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form method="post">
                        <!-- Medical Conditions Section -->
                        <div class="mb-5">
                            <h5 class="text-primary mb-4">
                                <i class="fas fa-allergies me-2"></i>Allergies & Medical Conditions
                            </h5>
                            <div class="row g-4">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="MedicalRecord.Allergies" class="form-label fw-semibold">
                                            <i class="fas fa-exclamation-circle text-warning me-1"></i>
                                            Known Allergies
                                        </label>
                                        <textarea asp-for="MedicalRecord.Allergies"
                                                  class="form-control form-control-lg"
                                                  rows="5"
                                                  placeholder="Please list any known allergies (food, medication, environmental, etc.)&#10;&#10;Example:&#10;• Peanuts - severe reaction&#10;• Penicillin - rash&#10;• Bee stings - swelling"></textarea>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Include severity of reactions and any emergency medications needed
                                        </div>
                                        <span asp-validation-for="MedicalRecord.Allergies" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="MedicalRecord.ChronicDiseases" class="form-label fw-semibold">
                                            <i class="fas fa-heartbeat text-danger me-1"></i>
                                            Chronic Conditions
                                        </label>
                                        <textarea asp-for="MedicalRecord.ChronicDiseases"
                                                  class="form-control form-control-lg"
                                                  rows="5"
                                                  placeholder="List any chronic diseases or ongoing medical conditions&#10;&#10;Example:&#10;• Asthma - controlled with inhaler&#10;• Type 1 Diabetes - insulin dependent&#10;• ADHD - takes daily medication"></textarea>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Include current management and medications for each condition
                                        </div>
                                        <span asp-validation-for="MedicalRecord.ChronicDiseases" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Medical History Section -->
                        <div class="mb-5">
                            <h5 class="text-primary mb-4">
                                <i class="fas fa-history me-2"></i>Medical History & Physical Status
                            </h5>
                            <div class="row g-4">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="MedicalRecord.TreatmentHistory" class="form-label fw-semibold">
                                            <i class="fas fa-procedures text-info me-1"></i>
                                            Treatment History
                                        </label>
                                        <textarea asp-for="MedicalRecord.TreatmentHistory"
                                                  class="form-control form-control-lg"
                                                  rows="5"
                                                  placeholder="Describe previous treatments, surgeries, or medical procedures&#10;&#10;Example:&#10;• Appendectomy - 2019&#10;• Broken arm - 2020, healed completely&#10;• Speech therapy - 2018-2020"></textarea>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Include dates and outcomes of significant medical events
                                        </div>
                                        <span asp-validation-for="MedicalRecord.TreatmentHistory" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="MedicalRecord.PhysicalCondition" class="form-label fw-semibold">
                                            <i class="fas fa-running text-success me-1"></i>
                                            Physical Condition & Special Needs
                                        </label>
                                        <textarea asp-for="MedicalRecord.PhysicalCondition"
                                                  class="form-control form-control-lg"
                                                  rows="5"
                                                  placeholder="Describe current physical condition, limitations, or special accommodations needed&#10;&#10;Example:&#10;• Limited mobility - uses wheelchair&#10;• Visual impairment - needs large print&#10;• Hearing aid user - sits in front row"></textarea>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Include any accommodations needed for school activities
                                        </div>
                                        <span asp-validation-for="MedicalRecord.PhysicalCondition" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Important Notice Section -->
                        <div class="mb-4">
                            <div class="alert alert-info border-info shadow-sm">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-shield-alt text-info me-3 mt-1"></i>
                                    <div>
                                        <h6 class="alert-heading mb-2">Privacy & Accuracy Notice</h6>
                                        <ul class="mb-0 ps-3">
                                            <li>All medical information is kept strictly confidential and shared only with authorized school personnel</li>
                                            <li>Please ensure all information is current and accurate for your child's safety</li>
                                            <li>Contact the school nurse immediately if any medical conditions change</li>
                                            <li>Emergency contacts will be notified in case of medical incidents</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 justify-content-end">
                            <a href="/parent/medical-record" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-2"></i>Cancel Changes
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-save me-2"></i>Update Medical Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card border-0 bg-light mt-4">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-question-circle me-2"></i>Need Assistance?
                            </h6>
                            <p class="text-muted mb-0">
                                For questions about medical records or if you need help completing this form,
                                please contact our school nurse or main office.
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <div class="d-flex flex-column gap-1">
                                <small class="text-muted">
                                    <i class="fas fa-phone me-1"></i>Nurse: (555) 123-4567
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-envelope me-1"></i>nurse@school.edu
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: 0.5rem;
        line-height: 1.5;
    }

    .card {
        border-radius: 1rem;
    }

    .alert {
        border-radius: 0.75rem;
    }

    .btn {
        border-radius: 0.5rem;
        font-weight: 500;
    }

    .form-label {
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
    }

    .form-text {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .alert ul {
        margin-bottom: 0;
    }

    .alert li {
        margin-bottom: 0.25rem;
    }

        .alert li:last-child {
            margin-bottom: 0;
        }
</style>