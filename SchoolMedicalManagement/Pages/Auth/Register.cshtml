@page
@model SchoolMedicalManagement.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main-container">
        <div class="form-container">
            <div class="login-card">
                <div class="logo">Register</div>
                <form method="post">
                    <div class="input-group">
                        <input asp-for="Input.Username" placeholder="Username" />
                        <span asp-validation-for="Input.Username" class="error-message"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Input.Email" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="error-message"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Input.Password" type="password" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="error-message"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="error-message"></span>
                    </div>
                    <button type="submit" class="submit-button">Register</button>
                </form>
                <div class="signup-link">
                    Already have an account? <a asp-page="Login">Login here</a>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html> 