@page
@model SchoolMedicalManagement.Pages.Auth.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i>My Profile</h4>
                </div>
                <div class="card-body bg-light p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Username</label>
                            <div class="form-control-plaintext">@Model.Profile.Username</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Email</label>
                            <div class="form-control-plaintext">@Model.Profile.Email</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Role</label>
                            <span class="badge bg-info text-dark">@Model.Profile.RoleName</span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Profile.FullName))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Full Name</label>
                                <div class="form-control-plaintext">@Model.Profile.FullName</div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Profile.PhoneNumber))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Phone Number</label>
                                <div class="form-control-plaintext">@Model.Profile.PhoneNumber</div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Profile.Address))
                        {
                            <div class="col-md-12">
                                <label class="form-label fw-bold text-muted">Address</label>
                                <div class="form-control-plaintext">@Model.Profile.Address</div>
                            </div>
                        }
                    </div>

                    <div class="text-end mt-4">
                        <a href="/Auth/EditProfile" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-1"></i>Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
