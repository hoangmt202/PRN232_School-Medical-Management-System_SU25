@page
@model SchoolMedicalManagement.Pages.Parents.CreateModel
@{
    ViewData["Title"] = "Create Parent";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-plus me-2"></i>Create New Parent
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Parent.FullName" class="form-label">Full Name</label>
                                    <input asp-for="Parent.FullName" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="Parent.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Parent.PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="Parent.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="Parent.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Parent.Address" class="form-label">Address</label>
                            <textarea asp-for="Parent.Address" class="form-control" rows="3" placeholder="Enter address"></textarea>
                            <span asp-validation-for="Parent.Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Parent.Username" class="form-label">Username</label>
                                    <input asp-for="Parent.Username" class="form-control" placeholder="Enter username" />
                                    <span asp-validation-for="Parent.Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Parent.Email" class="form-label">Email</label>
                                    <input asp-for="Parent.Email" type="email" class="form-control" placeholder="Enter email" />
                                    <span asp-validation-for="Parent.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Parent.Password" class="form-label">Password</label>
                                    <input asp-for="Parent.Password" type="password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Parent.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Role</label>
                                    <input value="Parent" class="form-control" readonly />
                                    <small class="form-text text-muted">Parents are automatically assigned the 'Parent' role</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Create Parent
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 