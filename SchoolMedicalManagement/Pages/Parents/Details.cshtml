@page "{id:int}"
@model SchoolMedicalManagement.Pages.Parents.DetailsModel
@{
    ViewData["Title"] = "Parent Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Parent Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Full Name:</strong>
                                <p class="form-control-plaintext">@Model.Parent.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Phone Number:</strong>
                                <p class="form-control-plaintext">@Model.Parent.PhoneNumber</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Address:</strong>
                        <p class="form-control-plaintext">@Model.Parent.Address</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Email:</strong>
                                <p class="form-control-plaintext">@Model.Parent.User?.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Username:</strong>
                                <p class="form-control-plaintext">@Model.Parent.User?.Username</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Role:</strong>
                                <p class="form-control-plaintext">@Model.Parent.User?.Role</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Created At:</strong>
                                <p class="form-control-plaintext">@Model.Parent.User?.CreatedAt.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>

                    @if (Model.Parent.Students != null && Model.Parent.Students.Any())
                    {
                        <div class="mb-3">
                            <strong>Associated Students:</strong>
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Name</th>
                                            <th>Class</th>
                                            <th>Date of Birth</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var student in Model.Parent.Students)
                                        {
                                            <tr>
                                                <td>@student.FullName</td>
                                                <td>@student.Class</td>
                                                <td>@student.DateOfBirth.ToString("MMM dd, yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No students are currently associated with this parent.
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@Model.Parent.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a asp-page="./Delete" asp-route-id="@Model.Parent.Id" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 