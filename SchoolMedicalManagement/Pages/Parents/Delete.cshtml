@page "{id:int}"
@model SchoolMedicalManagement.Pages.Parents.DeleteModel
@{
    ViewData["Title"] = "Delete Parent";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Parent
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this parent?</h5>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <strong>Full Name:</strong>
                            <p>@Model.Parent.FullName</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Phone Number:</strong>
                            <p>@Model.Parent.PhoneNumber</p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Address:</strong>
                        <p>@Model.Parent.Address</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <strong>Email:</strong>
                            <p>@Model.Parent.User?.Email</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Username:</strong>
                            <p>@Model.Parent.User?.Username</p>
                        </div>
                    </div>

                    @if (Model.Parent.Students != null && Model.Parent.Students.Any())
                    {
                        <div class="alert alert-info">
                            <strong>Warning:</strong> This parent has @Model.Parent.Students.Count() associated student(s). 
                            Deleting this parent may affect student records.
                        </div>
                    }

                    <form method="post">
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete Parent
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 