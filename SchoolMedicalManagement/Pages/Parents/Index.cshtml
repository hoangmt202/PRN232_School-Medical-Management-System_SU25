@page
@model SchoolMedicalManagement.Pages.Parents.IndexModel
@{
    ViewData["Title"] = "Parent Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Parent Management
                    </h3>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4>All Parents</h4>
                        <a asp-page="Create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>Add New Parent
                        </a>
                    </div>

                    @if (Model.Parents != null && Model.Parents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>Phone Number</th>
                                        <th>Address</th>
                                        <th>Email</th>
                                        <th>Username</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var parent in Model.Parents)
                                    {
                                        <tr>
                                            <td>@parent.Id</td>
                                            <td>@parent.FullName</td>
                                            <td>@parent.PhoneNumber</td>
                                            <td>@parent.Address</td>
                                            <td>@parent.User?.Email</td>
                                            <td>@parent.User?.Username</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Details" asp-route-id="@parent.Id" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-page="./Edit" asp-route-id="@parent.Id" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-page="./Delete" asp-route-id="@parent.Id" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            No parents found. Click "Add New Parent" to create the first parent record.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 