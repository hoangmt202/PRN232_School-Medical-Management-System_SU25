@page
@model SchoolMedicalManagement.Pages.Parents.Vaccination.AddExternalModel
@{
    ViewData["Title"] = "Add External Vaccination";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-plus-circle text-purple me-2"></i> Add External Vaccination</h2>

    <form method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Input.StudentId" class="form-label">Student</label>
            <select asp-for="Input.StudentId" class="form-select">
                <option value="">-- Select Student --</option>
                @foreach (var student in Model.Children)
                {
                    <option value="@student.Id">@student.FullName</option>
                }
            </select>
        </div>

        <div class="col-md-6">
            <label asp-for="Input.VaccineName" class="form-label">Vaccine Name</label>
            <input asp-for="Input.VaccineName" class="form-control" placeholder="e.g. Hepatitis B, COVID-19" />
        </div>

        <div class="col-md-6">
            <label asp-for="Input.DateGiven" class="form-label">Date Given</label>
            <input asp-for="Input.DateGiven" type="date" class="form-control"
                   max="@DateTime.Today.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-12">
            <label asp-for="Input.ResultNote" class="form-label">Note</label>
            <textarea asp-for="Input.ResultNote" class="form-control" rows="3" placeholder="Enter any notes, reactions, etc."></textarea>
        </div>

        <div class="col-12 text-end">
            <button type="submit" class="btn btn-success px-4">✅ Submit</button>
        </div>
    </form>
</div>
