@page "/h"
@model SchoolMedicalManagement.Pages.Parents.Vaccination.ConsentModel
@{
    ViewData["Title"] = "Vaccination Consent";
    var groupedPlans = Model.Plans.GroupBy(p => new { p.StudentId, p.StudentName });
}

<div class="container mt-4">
    <h3>🧬 Vaccination Consent</h3>
    <p>Review scheduled vaccinations and submit your consent for your children.</p>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (!Model.Plans.Any())
    {
        <p class="text-muted">No vaccination notices found.</p>
    }

    @foreach (var studentGroup in groupedPlans)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">@studentGroup.Key.StudentName</h5>
            </div>
            <div class="card-body">
                @foreach (var plan in studentGroup)
                {
                    <div class="mb-3 border-bottom pb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>
                                    <span tabindex="0"
                                          class="text-decoration-underline text-primary"
                                          data-bs-toggle="popover"
                                          data-bs-trigger="hover focus"
                                          title="@plan.VaccineName"
                                          data-bs-content="@plan.Notes">
                                        @plan.VaccineName
                                    </span>
                                </strong>
                                <div class="small text-muted">
                                    @plan.ScheduledDate.ToString("yyyy-MM-dd") | @plan.TargetGroup
                                </div>
                                <div class="small"><strong>Current Response:</strong> @plan.Response</div>
                            </div>
                            @if (plan.Response.Equals("Accepted") || plan.Response.Equals("Rejected"))
                            {
                                <div class="text-muted small">Response submitted: <strong>@plan.Response</strong></div>
                               
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Consent" class="d-flex gap-1">
                                    <input type="hidden" name="studentId" value="@plan.StudentId" />
                                    <input type="hidden" name="planId" value="@plan.Id" />
                                    <button type="submit" name="response" value="Accepted" class="btn btn-success btn-sm">Accept</button>
                                    <button type="submit" name="response" value="Rejected" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
            popoverTriggerList.forEach(function (el) {
                new bootstrap.Popover(el);
            });
        });
    </script>
}
